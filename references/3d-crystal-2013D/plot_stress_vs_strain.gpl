#!/usr/bin/gnuplot

file_name = "stress_vs_strain.txt"

set terminal win font "Arial,12"
set xlabel "Strain / %"
set xtics 5
set mxtics 5
set ylabel "Stress / GPa"
set mytics 5
set y2label "Temperature / K"
set y2tics
set my2tics 5

set title "Stress vs. Strain"

plot file_name u ($3*100):5 w l t "Stress", \
     file_name u ($3*100):2 w l t "Temperature" axis x1y2

